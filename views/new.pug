extends ./layout

block content
  div
    h1 Create a New Game
    form(action='/games/' method='POST')
      div.form-group
        label(for='name') Name
        input.form-control(type='text' name='name')
      div.form-group
        label(for='description') Description
        input.form-control(type='textarea' name='description')
      button.btn.btn-success#add Submit
